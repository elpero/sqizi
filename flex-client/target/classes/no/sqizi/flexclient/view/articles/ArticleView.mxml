<?xml version="1.0" ?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" creationComplete="handleCreationComplete()"
        close="PopUpManager.removePopUp(this)" showCloseButton="true"
        alpha="1">
    <mx:VBox width="100%" height="100%" verticalScrollPolicy="auto">

    <mx:Text id="header" text="{_articleModel.article.title}" />
    <mx:Text id="added" text="Added on {_articleModel.article.date} by {_articleModel.article.author.firstName} {_articleModel.article.author.lastName}"/>
    <mx:TextArea editable="false" id="content"  htmlText="{_articleModel.article.content}" height="500" maxWidth="600" width="600"/>
    </mx:VBox>

    <mx:Script><![CDATA[
        import mx.managers.PopUpManager;

        import no.sqizi.flexclient.domain.Article;

        import no.sqizi.flexclient.model.ArticleModel;

        import org.swizframework.Swiz;

        [Bindable]
        private var _articleModel:ArticleModel;

        private function handleCreationComplete():void {
             _articleModel = ArticleModel(Swiz.getBean("articleModel"));
        }

        ]]></mx:Script>
</mx:TitleWindow>